{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "lib": ["ES2018", "DOM", "DOM.Iterable"],
        "allowSyntheticDefaultImports": true
    },
    "include": ["packages"],
    "exclude": ["node_modules", "**/dist", "**/__tests__/**/*", "**/test/**", "**/tests/**"]
}
